{
  "name": "Cynth",
  "version": "0.0.1.0",
  "description": "Extension for Cynth password manager",
  "icons": {"48": "images/icon128.png"},
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action" :
  {
    "default_icon" : "images/icon128.png",
    "default_title" : "Cynth",
    "default_popup" : "pages/main.html"
  },
  "permissions" : [
    "declarativeContent",
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2
}